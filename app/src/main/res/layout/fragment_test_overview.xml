<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="@dimen/density_fifteen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2.1"
        android:orientation="vertical"
        android:layout_height="0dp">
        <TextView
            android:text="TEST DURATION"
            android:id="@+id/txtDurationKeyAtOverview"
            style="@style/TextViewSmallGreen"/>
        <View style="@style/horizontal_rule"/>
        <TextView
            android:text="2.5 Hours"
            android:id="@+id/txtDurationValueAtOverview"
            style="@style/TextViewLargeBlack"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2.1"
        android:orientation="vertical"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/txtTestDateKeyAtOverview"
            android:text="TEST DATE"
            style="@style/TextViewSmallGreen"/>
        <View style="@style/horizontal_rule"/>
        <TextView
            android:text="26 January 2016"
            android:id="@+id/txtTestDateValueAtOverview"
            style="@style/TextViewLargeBlack"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2.1"
        android:orientation="vertical"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/txtFinishDateKeyAtOverview"
            android:text="FINISH BEFORE"
            style="@style/TextViewSmallGreen"/>
        <View style="@style/horizontal_rule"/>
        <TextView
            android:text="30 January 2016"
            android:id="@+id/txtFinishDateValueAtOverview"
            style="@style/TextViewLargeBlack"/>
        <TextView
            android:text="Upto 11:30 AM IST"
            android:id="@+id/txtFinishTimeAtOverview"
            style="@style/TextViewSmallGreen"
            android:layout_marginTop="@dimen/density_five"
            android:textColor="@color/nliveo_blue_gray_colorPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutFooterAtOverview"
        android:layout_width="match_parent"
        android:layout_weight="3.7"
        android:orientation="vertical"
        android:layout_height="0dp">
        <Button
            android:text="TAKE TEST"
            android:id="@+id/btnTakeTestAtOverview"
            android:textSize="20sp"
            android:textColor="@color/nliveo_white"
            android:layout_marginTop="@dimen/density_twenty_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_theme_green" />
        <TextView
            android:text="Once you start this test, you can not pause it or re-take it"
            style="@style/TextViewSmallGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/density_ten"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/nliveo_blue_gray_colorPrimary"/>
    </LinearLayout>
</LinearLayout>
