<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background"
    android:weightSum="10"
    android:padding="@dimen/density_fifteen">
    <TextView
        android:text="Matter in our surroundings"
        android:id="@+id/txtReportTitle"
        style="@style/TextViewLargeBlack"
        android:layout_height="0dp"
        android:layout_weight="0.7"/>
    <TextView
        android:text="26 JANUARY 2015 AT 01:00 PM"
        android:id="@+id/txtReportDate"
        style="@style/TextViewSmallGreen"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
    <GridView
        android:id="@+id/gridViewReports"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6.8"
        android:gravity="center"
        android:numColumns="2"
        android:padding="7dp" >
    </GridView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:text="ANALYTICS"
            android:id="@+id/btnAnalytics"
            android:textSize="20sp"
            android:textColor="@color/nliveo_white"
            android:layout_marginRight="@dimen/density_five"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_theme_green" />
        <Button
            android:text="REVIEW"
            android:id="@+id/btnReview"
            android:textSize="20sp"
            android:textColor="@color/nliveo_white"
            android:layout_marginLeft="@dimen/density_five"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_theme_green" />
    </LinearLayout>
</LinearLayout>