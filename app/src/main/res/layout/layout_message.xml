<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:elevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:contentPadding="@dimen/density_ten"
        card_view:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <br.liveo.ui.RoundedImageView
                android:id="@+id/imgPicture"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="@dimen/density_ten"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="Saniya Mirza"
                    android:id="@+id/txtSender"
                    style="@style/TextViewLargeBlack"
                    android:textStyle="normal"
                    android:textSize="20sp"/>
                <TextView
                    android:text="We are glad to inform you..."
                    android:id="@+id/txtMessage"
                    style="@style/TextViewMediumGray"
                    android:textStyle="normal"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
