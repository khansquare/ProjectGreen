<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/density_fifteen"
    android:padding="@dimen/density_ten"
    android:background="@color/app_background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottom_border_gray">
        <TextView
            android:text="PERSONALIZATION"
            style="@style/TextViewSmallGreen"
            android:layout_marginTop="@dimen/density_ten"
            android:layout_marginBottom="@dimen/density_fifteen"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/density_fifteen"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textSize="20sp"/>
            <android.support.v7.widget.SwitchCompat
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:theme="@style/SwitchTheme"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/density_fifteen"
            android:text="Change Password"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottom_border_gray">
        <TextView
            android:text="ABOUT"
            style="@style/TextViewSmallGreen"
            android:layout_marginTop="@dimen/density_ten"
            android:layout_marginBottom="@dimen/density_fifteen"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organization"
            android:layout_marginBottom="@dimen/density_fifteen"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms of Services"
            android:layout_marginBottom="@dimen/density_fifteen"
            android:textSize="20sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:paddingLeft="@dimen/density_ten"
        android:layout_marginTop="@dimen/density_ten"
        android:layout_marginBottom="@dimen/density_fifteen"
        android:textSize="20sp"/>
</LinearLayout>