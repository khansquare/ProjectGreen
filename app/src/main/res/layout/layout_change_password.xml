<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#f9090c0f"
    android:padding="@dimen/density_twenty"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/cardViewMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="@dimen/density_fifteen"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="3dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MaterialAlertDialogTitleText"
                android:background="@drawable/bottom_border_gray"
                android:text="Change Password"
                android:id="@+id/txtDialogTitle" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/editOldPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:theme="@style/SwitchTheme"
                android:layout_marginTop="0dp">

                <EditText
                    android:id="@+id/editOldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/density_ten"
                    android:paddingBottom="@dimen/density_ten"
                    android:layout_marginBottom="@dimen/density_ten"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:hint="Old Password"
                    android:textColorHint="@color/nliveo_green_colorPrimaryDark"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/editNewPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:theme="@style/SwitchTheme"
                android:layout_marginTop="0dp">

                <EditText
                    android:id="@+id/editNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/density_ten"
                    android:paddingBottom="@dimen/density_ten"
                    android:layout_marginBottom="@dimen/density_ten"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:hint="New Password"
                    android:textColorHint="@color/nliveo_green_colorPrimaryDark"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/editConfirmPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:theme="@style/SwitchTheme"
                android:layout_marginTop="0dp">

                <EditText
                    android:id="@+id/editConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/density_ten"
                    android:paddingBottom="@dimen/density_ten"
                    android:layout_marginBottom="@dimen/density_ten"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:hint="Confirm Password"
                    android:textColorHint="@color/nliveo_green_colorPrimaryDark"/>
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/txtForgetPassword"
                    android:layout_width="0dp"
                    android:layout_weight="6.5"
                    android:layout_height="wrap_content"
                    android:text="Forget Password"/>
                <Button
                    android:id="@+id/btnChangePassword"
                    android:text="Submit"
                    android:layout_marginTop="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="wrap_content"
                    style="@style/MaterialAlertDialogButton"
                    android:textStyle="bold"
                    android:gravity="right|bottom"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>