<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="#fff">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <include

                android:id="@+id/btnOne"
                layout="@layout/layout_floating_button"/>

            <include
                android:id="@+id/btnTwo"
                layout="@layout/layout_floating_button"/>

            <include
                android:id="@+id/btnThree"
                layout="@layout/layout_floating_button"/>

            <include
                android:id="@+id/btnFour"
                layout="@layout/layout_floating_button"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <include
                android:id="@+id/btnOne"
                layout="@layout/layout_floating_button"/>

            <include
                android:id="@+id/btnTwo"
                layout="@layout/layout_floating_button"/>

            <include
                android:id="@+id/btnThree"
                layout="@layout/layout_floating_button"/>

            <include
                android:id="@+id/btnFour"
                layout="@layout/layout_floating_button"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <include
                android:id="@+id/btnOne"
                layout="@layout/layout_floating_button"/>

            <include
                android:id="@+id/btnTwo"
                layout="@layout/layout_floating_button"/>

            <include
                android:id="@+id/btnThree"
                layout="@layout/layout_floating_button"/>

            <include
                android:id="@+id/btnFour"
                layout="@layout/layout_floating_button"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="15dp"
                android:weightSum="1">
                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#ff6666"
                    android:layout_weight="0.20"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9.80"
                    android:layout_marginLeft="15dp"
                    android:text="Not Attend Question"
                    android:textColor="#6fbf4d"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">
                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#1c970f"
                    android:layout_weight="0.20"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9.80"
                    android:layout_marginLeft="15dp"
                    android:text="Attend Question"
                    android:textColor="#6fbf4d"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">
                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#37bab2"
                    android:layout_weight="0.20"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9.80"
                    android:layout_marginLeft="15dp"
                    android:text="Revisit Question"
                    android:textColor="#6fbf4d"/>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="110dp">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_theme_green"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:text="End Task"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>